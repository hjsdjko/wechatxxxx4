.forgot-container {
min-height
:75vh;
width
:100%;
padding
:424rpx 44rpx 44rpx 44rpx;
background
:url(http://codegen.caihongy.cn/20230815/be5343490bf4412389da1378210fd727.jpg) no-repeat center top / 100%;
height
:100%;
}

.forgot-content {
max-width: calc(100% - 23%);
overflow: hidden;
padding
:24rpx 24rpx 24rpx 24rpx;
box-shadow
:0px 0px 12rpx #dddddd;
border-radius
:16rpx;
background
:#ffffff;
display
:block;
width
:100%;
height
:auto;
}
